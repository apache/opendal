{
  "name": "opendal",
  "author": "OpenDAL Contributors <dev@opendal.apache.org>",
  "version": "0.41.0",
  "license": "Apache-2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "description": "Open Data Access Layer: Access data freely",
  "repository": "git@github.com/apache/incubator-opendal.git",
  "napi": {
    "name": "opendal",
    "package": {
      "name": "@opendal/lib"
    },
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin"
      ]
    }
  },
  "keywords": [
    "api",
    "fs",
    "file system",
    "gcs",
    "ghac",
    "http",
    "ipmfs",
    "memory",
    "obs",
    "oss",
    "s3",
    "storage",
    "webdav",
    "webhdfs"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "generated.js",
    "LICENSE",
    "NOTICE"
  ],
  "devDependencies": {
    "@aws-sdk/abort-controller": "^3.296.0",
    "@aws-sdk/client-s3": "^3.301.0",
    "@cucumber/cucumber": "^9.0.1",
    "@napi-rs/cli": "^2.15.1",
    "@swc-node/register": "^1.6.2",
    "@swc/core": "^1.3.38",
    "@types/node": "^18.14.5",
    "benny": "^3.7.1",
    "dotenv": "^16.0.3",
    "prettier": "^2.8.4",
    "typedoc": "^0.24",
    "typescript": "^5.0.2"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "build": "napi build --platform --target \"${NAPI_TARGET:-}\" --release --js generated.js && node ./scripts/header.js",
    "build:debug": "napi build --platform --target \"${NAPI_TARGET:-}\" --js generated.js && node ./scripts/header.js",
    "docs": "typedoc",
    "format": "prettier --write .",
    "test": "cucumber-js",
    "bench": "node -r dotenv/config ./benchmark/node.js dotenv_config_path=./.env",
    "bench:deno": "deno bench ./benchmark/deno.ts --reload=npm:opendal --allow-read --allow-ffi --allow-net --allow-env",
    "prepublishOnly": "napi prepublish -t npm"
  },
  "prettier": {
    "overrides": [
      {
        "files": "./**/*.{js,ts,mjs}",
        "options": {
          "printWidth": 120,
          "semi": false,
          "trailingComma": "all",
          "singleQuote": true,
          "arrowParens": "always",
          "parser": "typescript"
        }
      }
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "packageManager": "yarn@3.5.1"
}
